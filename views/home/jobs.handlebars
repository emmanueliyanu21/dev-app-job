<section class="job-page">
    <div class="container">
      <div class="row">

              <!-- Blog Entries Column -->
              <div class="col-md-12">

                <h1 class="my-4 card-open"> Job Opening
                  {{!-- <small>Secondary Text</small> --}}
                </h1>

              {{#each posts}}
                <!-- Blog Post -->
                <div class="card mb-4">
                  <div class="img-holder">
                    {{!-- <img class="card-img-top" src="/uploads/{{file}}" alt="Card image cap"> --}}
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-8">
                        <h2 class="card-title">{{title}}</h2>
                        
                        <p class="card-sub mb-2 mt-2">{{location}}</p>
                        <p class="card-text">{{body}}</p>
                        <p class="card-subtitle mb-2 mt-2"><span>Amount:</span> {{amount}}</p>
                      </div>
                      <div class="col-md-4">
                        <div class="card-apply">
                            <a href="/post/{{id}}" class="btn btn-more">Read More &rarr;</a>
                            <p class="card-status">Status: ongoing</p>
                        </div>
                      </div>
                    </div>
                  </div>
                  {{!-- <div class="card-footer text-muted">
                    Posted on July 28, 2019 by
                    <a href="#">Dev_Jobs</a>
                  </div> --}}
                </div>

                {{/each}}

                
                <!-- Pagination -->
                <ul class="pagination justify-content-center mb-4">
                  <li class="page-item">
                    <a class="page-link" href="#">&larr; Older</a>
                  </li>
                  <li class="page-item disabled">
                    <a class="page-link" href="#">Newer &rarr;</a>
                  </li>
                </ul>

              </div>

              <!-- Sidebar Widgets Column -->
              {{!-- {{> home/sidebar}} --}}

        </div>
    </div>
</section>
