 <h2>Categories</h2>

<div class="row">
	<div class="col-sm-4">
		<form action="/admin/categories/create" method="POST">
	        <div class="form-group">
                <input name="name" type="text" class="form-control" id="title" placeholder="Enter Title">
            </div>
            <button class="btn btn-primary" type="submit">Create Category</button>
        </form>
	</div>
    <div class="col-sm-8">
	    <table class="table">
	        <thead>
	            <tr>
	                <th>id</th>
	                <th>Name</th>
	            </tr>
	        </thead>
	        <tbody>
				{{#each categories}}
	            <tr>
	                <td>{{id}}</td>
	                <td>{{name}}</td>
					<td><a href="/admin/categories/edit/{{id}}" class="btn btn-primary">Edit</td>
					<td>
						<form action="/admin/categories/{{id}}?_method=DELETE" method="post">
							<button type="submit" class="btn btn-danger">DELETE</button>
						</form>
            		</td>
	            </tr>
				{{/each}}
            </tbody>
        </table>
    </div>
</div>