<h1>Create Posts</h1>

<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post">

    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" value="{{post.title}}">
    </div>

    <div class="form-group">
        <label for="title">Title</label>
        <select name="status" id="status" class="form-control">
    {{#select post.status}}
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
    {{/select}}
        </select>
    </div>
    

    <div class="form-group">
        <label for="allowComments">Allow Comment</label>
        <input name="allowComments" type="checkbox" {{#if post.allowComments}} checked="checked" {{/if}}class="form-control-input" id="allowComments">
    </div>

    <div class="form-group">
        <label for="body">Body</label>
        <textarea name="body" cols="30" rows="10" class="form-control" id="body" >{{post.body}}</textarea>
    </div>
        <button class="btn btn-primary" type="submit">Submit</button>
</form>