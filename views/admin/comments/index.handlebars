
<h2>Comments</h2>

<table class="table">
	<thead>
	    <tr>
		    <th>id</th>
		    <th>owner</th>
		    <th>Author</th>
		    <th>Date</th>
	    <tr>
    </thead>
    <tbody>
        {{#each Comments}}
        <tr>
            <td>{{id}}</td>
            <td>{{user.firstName}}</td>
            <td>{{generateDate date 'MMMM Do YYYY'}}</td>
            <td>
                
                <form action="/admin/comments/{{id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

            </td>
        </tr>
        {{/each}}
    </tbody>
</table>